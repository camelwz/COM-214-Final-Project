<div class="card shadow-sm p-4 mb-4">
  <h2 class="card-title"><%= @category.name %></h2>
  <p class="text-muted"><%= @category.description %></p>

  <h4 class="mt-4">ToDos in this Category</h4>
  <ul class="list-group list-group-flush mb-3">
    <% @todos.each do |todo| %>
      <% if current_user.id==todo.user_id %>
        <li class="list-group-item">
          <%= link_to todo.title, todo_path(todo) %>
        </li>
      <% end %>  
    <% end %>
  </ul>

  <div class="d-flex gap-2">
    <%= link_to "Edit", edit_category_path(@category), class: "btn btn-primary" %>
    <%= link_to "Back to Categories", categories_path, class: "btn btn-secondary" %>
    <%= button_to "Delete Category", category_path(@category), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
  </div>
</div>
