<div class="p-4" style="background-color: #d1ecf1;">
  <h2 class="text-info mb-4"><i class="fas fa-folder-open me-2"></i>
Categories</h2>

  <%= link_to raw('<i class="fas fa-plus-circle me-1"></i> New
Category'), new_category_path, class: "btn btn-info text-white mb-3"
%>

  <% if @categories.any? %>
    <% @categories.each do |category| %>
      <div class="alert alert-primary d-flex justify-content-between
align-items-center">
        <div>
          <strong><i class="fas fa-tag me-1"></i> <%= category.name %></strong>
          <p class="mb-0"><%= category.description %></p>
        </div>
        <div class="d-flex gap-2">
          <%= link_to raw('<i class="fas fa-eye"></i> View'),
category_path(category), class: "btn btn-sm btn-outline-dark" %>
          <%= link_to raw('<i class="fas fa-edit"></i> Edit'),
edit_category_path(category), class: "btn btn-sm btn-secondary" %>
          <%= link_to raw('<i class="fas fa-trash-alt"></i> Delete'),
category_path(category), method: :delete, data: { confirm: "Delete
this category?" }, class: "btn btn-sm btn-danger" %>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="alert alert-info">
      <i class="fas fa-info-circle me-1"></i> No categories created yet.


    </div>
  <% end %>
</div>