<div class="p-4" style="background-color: #d4edda;">
  <h2 class="text-success mb-4"><i class="fas fa-check-circle
me-2"></i> Completed ToDos</h2>

  <% if @todos.any? %>
    <% @todos.each do |todo| %>
      <div class="alert alert-success d-flex justify-content-between
align-items-center">
        <div>
          <strong><i class="fas fa-circle-check me-2"></i><%=
todo.title %></strong><br>
          <small class="text-muted"><i class="fas fa-folder
me-1"></i><%= todo.category.name if todo.category %></small>
        </div>

        <div class="d-flex gap-2">
          <%= link_to raw('<i class="fas fa-eye"></i> View'),
todo_path(todo), class: "btn btn-sm btn-outline-dark" %>
          <%= link_to raw('<i class="fas fa-trash-alt"></i> Delete'),
todo_path(todo), method: :delete, data: { confirm: "Are you sure?" },
class: "btn btn-sm btn-danger" %>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="alert alert-info">
      <i class="fas fa-info-circle me-1"></i> No completed ToDos yet!


    </div>
  <% end %>
</div>
