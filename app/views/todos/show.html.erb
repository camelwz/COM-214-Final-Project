<div class="card shadow-sm p-4 mb-4">
  <h2 class="card-title"><%= @todo.title %></h2>
  <p class="text-muted">Category: <%= @todo.category.name if @todo.category %></p>

  <ul class="list-group list-group-flush mb-3">
    <li class="list-group-item">
      <strong>Priority:</strong>
      <%= raw(@todo.priority ? '<span class="text-danger">🔥 Yes</span>' : 'No') %>

    </li>
    <li class="list-group-item">
      <strong>Completed:</strong>
      <%= raw(@todo.completed ? '<span class="text-success">✅ Yes</span>' : '❌ No') %>

    </li>
  </ul>

  <div class="d-flex gap-2">
    <%= link_to "Edit", edit_todo_path(@todo), class: "btn btn-primary" %>
    <%= link_to "Back to ToDos", todos_path, class: "btn btn-secondary" %>
  </div>
</div>

