<h2 class="mb-4 text-center">Edit ToDo</h2>

<%= form_with model: @todo, local: true, html: { class: "row g-3 justify-content-center" } do |f| %>
  <div class="col-md-6">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="col-md-6">
    <%= f.label :category_id, "Category", class: "form-label" %>
    <%= f.collection_select :category_id, @categories, :id, :name, {}, { class: "form-select" } %>
  </div>

  <div class="col-12 text-center">
    <div class="form-check form-check-inline">
      <%= f.check_box :priority, class: "form-check-input", id: "todo_priority" %>
      <%= f.label :priority, class: "form-check-label", for: "todo_priority" %>
    </div>

    <div class="form-check form-check-inline">
      <%= f.check_box :completed, class: "form-check-input", id: "todo_completed" %>
      <%= f.label :completed, class: "form-check-label", for: "todo_completed" %>
    </div>
  </div>

  <div class="col-12 text-center">
    <%= f.submit "Update ToDo", class: "btn btn-primary mt-2" %>
  </div>
<% end %>


